<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Roads of Adventure Safaris</title>
    
    <% if (typeof seo !== 'undefined') { %>
        <meta name="description" content="<%= seo.description %>">
        <meta name="keywords" content="<%= seo.keywords %>">
        <% if (seo.canonicalUrl) { %>
            <link rel="canonical" href="<%= seo.canonicalUrl %>">
        <% } %>
        <meta property="og:title" content="<%= seo.title %>">
        <meta property="og:description" content="<%= seo.description %>">
        <% if (seo.ogImage) { %>
            <meta property="og:image" content="<%= seo.ogImage %>">
        <% } %>
    <% } %>
    
    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <!-- Remixicons -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.2.0/fonts/remixicon.css" rel="stylesheet">

    <!-- Owl Carousel -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
    

    <!-- Slick Carousel CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css"/>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css"/>

    <!-- Favicon -->
    <link href="/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet"> 

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet">
    
    <!-- Flag Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@7.2.3/css/flag-icons.min.css"/>

    <!-- Custom Stylesheet -->
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
    
    <!-- Page-specific styles -->
    <% if (typeof styles !== 'undefined') { %>
        <%- styles %>
    <% } %>
</head>
<body>
    <!-- Include Header -->
    <%- include('../partials/header') %>
    
    <!-- Flash Messages -->
    <%- include('../partials/flash-messages') %>
    
    <!-- Main Content -->
    <%- body %>
    
    <!-- Include Footer -->
    <%- include('../partials/footer') %>
    
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-lg-square back-to-top"><i class="fa fa-angle-double-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>

    <!-- Template Javascript -->
    <script src="/js/main.js"></script>
    <script src="/js/script.js"></script>
    
    <!-- Page-specific scripts -->
    <% if (typeof scripts !== 'undefined') { %>
        <%- scripts %>
    <% } %>
    <script>
        $(document).ready(function(){
            $(".destination-carousel").owlCarousel({
                loop: true, // Infinite loop
                margin: 10, // Spacing between items
                nav: true, // Show next/prev buttons
                dots: true, // Show dots navigation
                autoplay: true, // Auto-slide
                autoplayTimeout: 3000, // 3 seconds per slide
                responsive: {
                    0: { items: 1 }, // 1 item on mobile
                    600: { items: 2 }, // 2 items on tablets
                    960: { items: 3 }, 
                    1140: { items: 4 }// 3 items on desktops
                }
            }); 
        });
    </script>  

    <!-- Owl Carousel JS and Initialization -->
    <script>
        $(document).ready(function(){
            $(".package-carousel").owlCarousel({
                loop: true,
                margin: 10,
                nav: true,  // Enable nav buttons
                dots: true,
                autoplay: true,
                autoplayTimeout: 4000,
                autoplayHoverPause: true,
                responsive:{
                    0:{ items:1 },
                    720:{ items:2 },
                    960:{ items:3 },
                    1300:{ items:4 }
                }
            });
        });
        </script>
        
    <!-- Partners carousel -->
    <script>
        $(document).ready(function(){
            $('.partner-carousel').slick({
                slidesToShow: 4,       // Show 4 logos at a time
                slidesToScroll: 1,
                autoplay: true,
                autoplaySpeed: 2000,   // Change logo every 2 sec
                arrows: false,         // Hide prev/next arrows
                dots: false,           // No navigation dots
                infinite: true,
                responsive: [
                    {
                        breakpoint: 1024,
                        settings: { slidesToShow: 3 }
                    },
                    {
                        breakpoint: 768,
                        settings: { slidesToShow: 2 }
                    },
                    {
                        breakpoint: 480,
                        settings: { slidesToShow: 1 }
                    }
                ]
            });
        });
        </script>
</body>
</html>
