<!-- Hero Section Start -->
    <section class="terms-hero-section">
        <img src="img/Samburu-Luxury-Kenya-Safaris.jpg" alt="Uganda Safari" class="hero-image">
        <div class="hero-overlay">
            <h1 class="display-4 text-white font-weight-bold">Safari Updates</h1>
        </div>
    </section>
    <!-- Hero Section End -->

<!-- About Start -->

<div class="package-container" id="blogs">
    <div class="container-fluid py-1">
        <div class="container pt-5 pb-3">
            <div class="text-center mb-3 pb-3">
                <h6 class="package-header font-weight-bold text-uppercase" style="letter-spacing: 5px; font-size: 28px;">Latest From Our Safari Blogs</h6>
                
            </div>

            <div class="row">
                <div class="col-lg-8">
                    <div class="row pb-3">
                        <% if (blogs && blogs.length > 0) { %>
                            <% blogs.forEach(function(blog) { %>
                                <div class="col-lg-6 col-md-6 mb-4 pb-2"> <div class="blog-item">
                                        <div class="position-relative">
                                            <% if (blog.coverImage) { %>
                                                <img class="img-fluid w-100" src="<%= blog.coverImage %>" alt="<%= blog.title %> Cover Image">
                                            <% } else { %>
                                                <img class="img-fluid w-100" src="/img/blog-placeholder.jpg" alt="Default Blog Image">
                                            <% } %>
                                        </div>
                                        <div class="bg-white p-4">
                                            <div class="d-flex mb-2">
                                                <h4><a class="font-weight-bold text-decoration-none" href="/blogs/<%= blog.slug %>"><%= blog.title %></a></h4>
                                            </div>
                                            <p class="h5 m-0 text-decoration-none"><%= blog.excerpt || blog.shortDescription %></p> <a href="/blogs/<%= blog.slug %>" class="btn btn-primary mt-3">Read more <i class='bx bx-link-external'></i></a>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="col-12 text-center">
                                <p class="text-center w-100">No recent blog posts available.</p>
                            </div>
                        <% } %>
                    </div>

                    <% if (totalPages > 1) { %>
                        <div class="col-12 mt-4">
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                        <a class="page-link" href="/blogs?<%= new URLSearchParams({ ...query, page: currentPage - 1 }).toString() %>" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                    </li>
                                    <% for(let i = 1; i <= totalPages; i++) { %>
                                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                            <a class="page-link" href="/blogs?<%= new URLSearchParams({ ...query, page: i }).toString() %>"><%= i %></a>
                                        </li>
                                    <% } %>
                                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                        <a class="page-link" href="/blogs?<%= new URLSearchParams({ ...query, page: currentPage + 1 }).toString() %>" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    <% } %>
                </div>

                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">Search Blog</div>
                        <div class="card-body">
                            <form method="GET" action="/blogs">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search for blogs..." name="search" value="<%= query.search || '' %>">
                                    <div class="input-group-append">
                                        <button class="btn btn-primary" type="submit">Search</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">Popular Posts</div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <% if (popularBlogs && popularBlogs.length > 0) { %>
                                    <% popularBlogs.forEach(blog => { %>
                                        <li class="list-group-item d-flex align-items-center">
                                            <% if (blog.coverImage) { %>
                                                <img src="<%= blog.coverImage %>" alt="<%= blog.title %>" class="img-fluid rounded mr-3" style="width: 60px; height: 60px; object-fit: cover;">
                                            <% } else { %>
                                                <img src="/img/blog-placeholder.jpg" alt="Default Blog Image" class="img-fluid rounded mr-3" style="width: 60px; height: 60px; object-fit: cover;">
                                            <% } %>
                                            <div>
                                                <a href="/blogs/<%= blog.slug %>" class="text-dark font-weight-bold"><%= blog.title %></a>
                                                <small class="text-muted d-block"><%= new Date(blog.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></small>
                                            </div>
                                        </li>
                                    <% }); %>
                                <% } else { %>
                                    <li class="list-group-item">No popular posts yet.</li>
                                <% } %>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>