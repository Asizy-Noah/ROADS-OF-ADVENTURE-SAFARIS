<div class="package-container " id="blogs">
    <img class="p-background" src="/img/Victoria-falls.jpeg" alt="">
    <div class="container-fluid py-1">
        <div class="container pt-5 pb-3">
            <div class="text-center mb-3 pb-3">
                <h6 class="package-header font-weight-bold text-uppercase" style="letter-spacing: 5px; font-size: 28px;">Our Travel Update</h6>
                <p class="font-italic font-weight-bold" style="font-size: 24px;">Latest From Our Blog</p>
            </div>
            <div class="row pb-3">
                <% if (blogs && blogs.length > 0) { %>
                    <% blogs.forEach(function(blog) { %>
                        <div class="col-lg-3 col-md-6 mb-4 pb-2">
                            <div class="blog-item">
                                <div class="position-relative">
                                    <% if (blog.coverImage) { %>
                                        <img class="img-fluid w-100" src="<%= blog.coverImage %>" alt="<%= blog.title %> Cover Image">
                                    <% } else { %>
                                        <img class="img-fluid w-100" src="/img/blog-placeholder.jpg" alt="Default Blog Image">
                                    <% } %>
                                </div>
                                <div class="bg-white p-4">
                                    <div class="d-flex mb-2">
                                        <h4><a class="font-weight-bold text-decoration-none" href="/blogs/<%= blog.slug %>"><%= blog.title %></a></h4>
                                    </div>
                                    <p class="h5 m-0 text-decoration-none"><%= blog.shortDescription %></p>
                                    <a href="/blogs/<%= blog.slug %>" class="btn btn-primary mt-3">Read more <i class='bx bx-link-external'></i></a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="text-center w-100">No recent blog posts available.</p>
                <% } %>
            </div>

            <% if (totalPages > 1) { %>
            <div class="col-12">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                            <a class="page-link" href="/?page=<%= currentPage - 1 %>" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <% for(let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link" href="/?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
                        <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                            <a class="page-link" href="/?page=<%= currentPage + 1 %>" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
            <% } %>
        </div>
    </div>
</div>


